<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kruisband.fragments.VideoFragment">

    <TextView
        android:id="@+id/textView1"
        android:text="@string/mobilisation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_margin="2dp"
        android:layout_alignParentTop="true"/>

    <HorizontalScrollView
        android:id="@+id/hsv1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:scrollbars="horizontal"
        android:fadeScrollbars="false">

        <LinearLayout
            android:id="@+id/first_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageview1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/leg_extension_scr"
                android:clickable="true"
                android:layout_margin="2dp"
                />

            <ImageView
                android:id="@+id/imageview1_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ankle_pumps_scr"
                android:clickable="true"
                android:layout_margin="2dp"
                />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView2"
        android:text="@string/force"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_margin="2dp"
        android:layout_below="@id/hsv1"/>

    <HorizontalScrollView
        android:id="@+id/hsv2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:scrollbars="horizontal"
        android:fadeScrollbars="false">

        <LinearLayout
            android:id="@+id/second_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageview2_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/straight_leg_raise_scr"
                android:clickable="true"
                android:layout_margin="2dp"
                />

            <ImageView
                android:id="@+id/imageview2_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/knee_extension_scr"
                android:clickable="true"
                android:layout_margin="2dp"
                />

            <ImageView
                android:id="@+id/imageview2_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/heup_abductie_scr"
                android:clickable="true"
                android:layout_margin="2dp"
                />
        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>
